{
  "name": "shac-player",
  "version": "1.0.0",
  "description": "SHAC Player - Walk Around Inside Your Music",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["shac", "spatial-audio", "music", "3d-audio"],
  "author": {
    "name": "Clarke Zyz & Claude",
    "email": "cc@zyzd.cc"
  },
  "homepage": "https://shac.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/clarkezyz/shac-player-offline.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shac.player",
    "productName": "SHAC Player",
    "files": [
      "index.html",
      "styles.css",
      "main.js",
      "preload.js",
      "js/**/*",
      "icon-*.png",
      "favicon.ico",
      "manifest.json",
      "sw.js",
      "LICENSE"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon-512.png",
      "fileAssociations": [
        {
          "ext": "shac",
          "name": "SHAC Audio File",
          "description": "Spatial Harmonic Audio Codec",
          "role": "Editor"
        }
      ]
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "icon-512.png",
      "category": "public.app-category.music",
      "fileAssociations": [
        {
          "ext": "shac",
          "name": "SHAC Audio File",
          "description": "Spatial Harmonic Audio Codec",
          "role": "Editor"
        }
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon-512.png",
      "category": "Audio",
      "maintainer": "Clarke Zyz <cc@zyzd.cc>",
      "fileAssociations": [
        {
          "ext": "shac",
          "name": "SHAC Audio File",
          "description": "Spatial Harmonic Audio Codec",
          "mimeType": "audio/shac"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
